generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_name   String      @unique
  created_at  DateTime    @default(now())
  updated_at  DateTime    @default(now()) @updatedAt
  authorships Author[]
  contact     Contact?
  teamMember  TeamMember?
  roles       UserRole[]
}

model Contact {
  user_id    String   @id @db.Uuid
  email      String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Role {
  id         String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  role_id    RoleType   @unique
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now()) @updatedAt
  users      UserRole[]
}

model UserRole {
  user_id    String   @db.Uuid
  role_id    String   @db.Uuid
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
  role       Role     @relation(fields: [role_id], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, role_id])
}

model TeamMember {
  user_id      String    @id @db.Uuid
  tenure_start DateTime
  tenure_end   DateTime?
  description  String?
  photo_s3_url String?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @default(now()) @updatedAt
  position     String
  status       Status
  user         User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Journal {
  id           String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  journal_name String
  journal_url  String?
  created_at   DateTime      @default(now())
  updated_at   DateTime      @default(now()) @updatedAt
  publications Publication[]
}

model Publication {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  journal_id      String   @db.Uuid
  publication_title String  @default("Title")
  publication_url String
  publication_desc String @default("Publication")
  pdf_s3_url      String
  date_published  DateTime
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now()) @updatedAt
  authors         Author[]
  journal         Journal  @relation(fields: [journal_id], references: [id], onDelete: Cascade)
}

model Author {
  user_id        String      @db.Uuid
  publication_id String      @db.Uuid
  created_at     DateTime    @default(now())
  updated_at     DateTime    @default(now()) @updatedAt
  publication    Publication @relation(fields: [publication_id], references: [id], onDelete: Cascade)
  user           User        @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, publication_id])
}

enum RoleType {
  admin
  team
  author
}

enum Status {
  current
  former
}
